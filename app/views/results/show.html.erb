<div class="container" style="margin-top:50px;">
  <div class="row">
    <div class="col">
    <% if @rep.class == HouseMember %>
    <h1 class="text-center">Your Comparison With <%= link_to @rep.full_name, house_member_path(@rep) %></h1><br>
    <% else %>
    <h1 class="text-center">Your Comparison With <%= link_to @rep.full_name, senator_path(@rep) %></h1><br>
    <% end %>
    <img src="<%= SinatraService.new.get_image(@rep.congress_id) %>" class="rounded mx-auto d-block rep-img" alt="Responsive image" style="height:60%;"><br><br>
    <h1 class="text-center comparison-score">Score: <%= number_to_percentage(@comparison_score, precision: 0) %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-6 text-center agreed-votes">
      <h2>Bills You Agreed On</h2><br>
      <% @matching_bills&.each do |bill| %>
        <p><%= bill %></p><br>
      <% end %>
    </div>


    <div class="col-6 text-center disagreed-votes">
      <h2>Bills You Disagreed On</h2><br>
      <% @not_matching_bills&.each do |bill| %>
        <p><%= bill %></p><br>
      <% end %>
    </div>
  </div>
</div>
<br><br>

<div class="container">
  <div class="row">
    <div class="col text-center">
      <a href=<%= "https://twitter.com/intent/tweet?text=" + url_encode("I compared votes on bills with @#{@rep.twitter_account} and we agreed #{number_to_percentage(@comparison_score, precision: 0)} of the time. Check out https://represent-application.herokuapp.com/ to see how you match with your local representatives!") %> target="_blank" class="tweet-button">Send a Tweet Your Rep!</a>
    </div>
  </div>
</div>
<br><br>


