<div class="container" style="margin-top:25px;">
  <div class="row">
    <div class="col">
    <h1 class="text-center">Representatives from <%= @state %></h1>
    </div>
  </div>
</div>
<br><br><br>

<div class="container">
  <div class="row">
    <div class="col-sm-6 text-center">
      <h3>House Members</h3><br>
    </div>
    <div class="col-sm-4">
      <h3 class="text-right" style="margin-right:20px;">Senators</h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-8">
      <% @members.each do |member| %>
      <div class="col-3 d-flex d-inline-flex member" style="margin-top:10px;">
        <div class="card representative compared-rep">
          <img class="card-img-top rep-image" src="<%= SinatraService.new.get_image(member.congress_id) %>" alt="Card image cap">
          <div class="card-body">
            <h6 class="card-title name"><%= member.full_name %>
            </h6>
            <p class='card-district'><% if member.at_large %>
            At-Large District
            <% else %>
            <%= member.district.ordinalize %> District
            <% end %></p>
            <a href="/house_members/<%= member.id %>" class="btn btn-outline-primary">Learn More</a>
          </div>
        </div><br>
      </div>
      <% end %>
    </div>
    <div class="col-4" style="margin-top:10px;">
      <% @senators.each do |senator| %>
        <div class="card senator" style="width: 10rem;">
          <img class="card-img-top rep-image" src="<%= SinatraService.new.get_image(senator.congress_id) %>" alt="Card image cap">
          <div class="card-body">
            <h6 class="card-text name"><%= senator.full_name %>
            </h6>
            <p class='card-rank'><%= senator.state_rank.capitalize %> Senator</p>
            <a href="/senators/<%= senator.id %>" class="btn btn-outline-primary">Learn More</a>
          </div>
        </div><br>
      <% end %>
    </div>
  </div>
</div>
